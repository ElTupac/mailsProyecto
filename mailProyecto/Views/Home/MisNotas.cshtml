@{
    ViewData["Title"] = "Mis Notas";
}

<div class="content">

    <h1 class="logo">Busca una de tus notas</h1>

    <div class="contact-wrapper animated bounceInUp">
        <div class="contact-form">
            <h3>Numero de nota</h3>
            <form method="GET" action='@Url.Action("ConsultarNotas", "Home")'>
                <p>
                    <label for="ID">Numero de nota</label>
                    <input type="number" name="ID" required>
                </p>
                <p class="block">
                    <button type="submit" value="Enviar">Enviar</button>
                </p>
            </form>
        </div>
    </div>

</div>